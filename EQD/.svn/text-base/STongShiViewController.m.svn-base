#import "STongShiViewController.h"
#import "ZuZhiModel.h"
#import "TonShiModel.h"
#import "ZLTableViewCell.h"
#import <UIButton+AFNetworking.h>
@interface STongShiViewController ()<UITableViewDelegate,UITableViewDataSource>
{
    UITableView *tableV;
    NSMutableArray *arr_zuzhi;
    UserModel *user;
    UISegmentedControl *segmentC;
    ComModel *com;
    ///记录导航栏上的标题
    NSMutableArray *arr_titles;
    ZuZhiModel *selected_model;
    float width;
    //记录人员
    NSMutableArray *arr_renyuan;
    NSMutableArray *arr_slected_tongshi;
    UIBarButtonItem *right;
}


@end

@implementation STongShiViewController
-(void)viewWillAppear:(BOOL)animated{
    [super viewWillAppear:animated];
    [self loadRequestData];
}
-(void)loadRequestData{
    self.view.userInteractionEnabled=NO;
    MBProgressHUD *hud = [MBProgressHUD showHUDAddedTo:self.view animated:YES];
    hud.mode = MBProgressHUDModeAnnularDeterminate;
    hud.label.text = @"正在加载";
    [WebRequest Com_SelectSection_PartWithpparent:selected_model.ID And:^(NSArray *arr){
        self.view.userInteractionEnabled=YES;
        [hud hideAnimated:NO];
        [arr_zuzhi removeAllObjects];
        if (arr.count) {
            for (NSDictionary *dic1 in arr) {
                ZuZhiModel *model =[ZuZhiModel mj_objectWithKeyValues:dic1];
                [arr_zuzhi addObject:model];
            }
        }
        dispatch_async(dispatch_get_main_queue(), ^{
            [tableV reloadData];
        });
        
    }];
    
    [WebRequest Com_SelectSection_EmploymentWithpostnum:selected_model.ID And:^(NSDictionary *dic) {
        [arr_renyuan removeAllObjects];
        if ([dic[Y_STATUS] integerValue]==200) {
            NSArray *arr =dic[Y_ITEMS];
            if (arr.count) {
                for (NSDictionary *dic1 in arr) {
                    TonShiModel *model = [TonShiModel mj_objectWithKeyValues:dic1];
                    [arr_renyuan addObject:model];
                    
                }
            }
            [tableV reloadData];
        }
    }];
    
    
    
}
- (void)viewDidLoad {
    [super viewDidLoad];
    self.automaticallyAdjustsScrollViewInsets =NO;
    arr_zuzhi =[NSMutableArray arrayWithCapacity:0];
    arr_titles =[NSMutableArray arrayWithCapacity:0];
    arr_renyuan =[NSMutableArray arrayWithCapacity:0];
    arr_slected_tongshi = [NSMutableArray arrayWithCapacity:0];
    user= [WebRequest GetUserInfo];
    com =[WebRequest getCompanyInfo];
    segmentC =[[UISegmentedControl alloc]initWithItems:@[com.comname]];
    segmentC.frame = CGRectMake(0, 64, DEVICE_WIDTH, 40);
    [self.view addSubview:segmentC];
    [segmentC addTarget:self action:@selector(chooseClick) forControlEvents:UIControlEventValueChanged];
    segmentC.selectedSegmentIndex =0;
    tableV = [[UITableView alloc]initWithFrame:CGRectMake(0, 104, DEVICE_WIDTH, DEVICE_HEIGHT-104) style:UITableViewStyleGrouped];
    tableV.delegate=self;
    tableV.dataSource=self;
    [self.view addSubview:tableV];
    tableV.rowHeight=50;
    selected_model = [[ZuZhiModel alloc]init];
    selected_model.dname = com.comname;
    selected_model.ID = com.comid;
    
    [arr_titles addObject:selected_model];
    
    width = DEVICE_WIDTH/4.0;
   right = [[UIBarButtonItem alloc]initWithTitle:@"发送" style:UIBarButtonItemStylePlain target:self action:@selector(fasongClick)];
    [self.navigationItem setRightBarButtonItem:right];
    right.enabled=NO;
}
-(void)fasongClick
{
    //发送分享的内容 最多5个
    
   
    for (TonShiModel *model in arr_slected_tongshi) {
        if([self.messageContent isKindOfClass:[RCTextMessage class]]|| [self.messageContent isKindOfClass:[RCVoiceMessage class]]||[self.messageContent isKindOfClass:[RCRichContentMessage class]]|| [self.messageContent isKindOfClass:[RCLocationMessage class]])
        {
            [[RCIM sharedRCIM ]sendMessage:ConversationType_PRIVATE targetId:model.uid content:self.messageContent pushContent:nil pushData:nil success:^(long messageId) {
            } error:^(RCErrorCode nErrorCode, long messageId) {
            }];
            
            
        }
        else
        {
            [[RCIM sharedRCIM]sendMediaMessage:ConversationType_PRIVATE targetId:model.uid content:self.messageContent pushContent:nil pushData:nil progress:nil success:^(long messageId) {
               
            } error:^(RCErrorCode errorCode, long messageId) {
                
            } cancel:^(long messageId) {
                
            }];
            
        }
    }
 
    [self dismissViewControllerAnimated:NO completion:nil];
    
}
-(void)chooseClick
{
    //临时数组记录选之前的model
    NSMutableArray *tarr =[NSMutableArray arrayWithCapacity:0];
    for (int i=0; i<(segmentC.selectedSegmentIndex+1); i++) {
        ZuZhiModel *model = arr_titles[i];
        [tarr addObject:model];
    }
    [segmentC removeAllSegments];
    
    
    selected_model = tarr[tarr.count-1];
    arr_titles =[NSMutableArray arrayWithArray:tarr];
    if (arr_titles.count<5) {
        segmentC.frame =CGRectMake(0, 64, DEVICE_WIDTH, 40);
    }
    else
    {
        segmentC.frame =CGRectMake(-width*(arr_titles.count-4), 64, DEVICE_WIDTH+width*(arr_titles.count-4), 40);
    }
    
    for (int i =0; i<tarr.count;i++) {
        ZuZhiModel *model1 =tarr[i];
        [segmentC insertSegmentWithTitle:model1.dname atIndex:i animated:NO];
    }
    segmentC.selectedSegmentIndex = tarr.count-1;
    [self loadRequestData];
    
}

#pragma  mark - 表的数据源
-(CGFloat)tableView:(UITableView *)tableView heightForHeaderInSection:(NSInteger)section
{
    return 25;
}
-(NSString*)tableView:(UITableView *)tableView titleForHeaderInSection:(NSInteger)section
{
    if (section==0) {
        return @"部门";
    }
    else
    {
        return @"该部门下的工作人员";
    }
}
-(NSInteger)numberOfSectionsInTableView:(UITableView *)tableView
{
    return 2;
}
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    if (section==0) {
        return arr_zuzhi.count;
    }
    return arr_renyuan.count;
}
-(UITableViewCell*)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    if (indexPath.section==0) {
        static NSString *cellId=@"cellID";
        UITableViewCell *cell =[tableView dequeueReusableCellWithIdentifier:cellId];
        if (!cell) {
            cell = [[UITableViewCell alloc]initWithStyle:UITableViewCellStyleDefault reuseIdentifier:cellId];
            cell.accessoryType = UITableViewCellAccessoryDisclosureIndicator;
        }
        ZuZhiModel *model =arr_zuzhi[indexPath.row];
        cell.textLabel.text =model.dname;
        return cell;
    }
    else
    {
        static NSString *cellId1=@"cellID1";
        ZLTableViewCell *cell1 =[tableView dequeueReusableCellWithIdentifier:cellId1];
        if (!cell1) {
            cell1 = [[ZLTableViewCell alloc]initWithStyle:UITableViewCellStyleDefault reuseIdentifier:cellId1];
            cell1.accessoryType = UITableViewCellAccessoryNone;
        }
        TonShiModel *model = arr_renyuan[indexPath.row];
        [cell1.B_headimg setBackgroundImageForState:UIControlStateNormal withURL:[NSURL URLWithString:model.photo] placeholderImage:[UIImage imageNamed:@"no_login_head"]];
        cell1.L_name.text =model.name;
        cell1.L_date.text = [NSString stringWithFormat:@"入职日期：%@",model.entertimes];
        cell1.L_bumen.text =model.postname;
        cell1.L_gangwei.text = model.careername;
        if ([model.sex integerValue]==0) {
            
        }
        else
        {
            cell1.backgroundColor = [UIColor redColor];
        }
        return cell1;
    }
    
}
#pragma  mark - 表的协议代理
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (indexPath.section==0) {
        ZuZhiModel *model = arr_zuzhi[indexPath.row];
        selected_model = model;
        if (arr_titles.count>3) {
            segmentC.frame =CGRectMake(-width*(arr_titles.count-3), 64, DEVICE_WIDTH+width*(arr_titles.count-3), 40);
        }
        [segmentC insertSegmentWithTitle:model.dname atIndex:segmentC.selectedSegmentIndex+1 animated:NO];
        segmentC.selectedSegmentIndex+=1;
        [arr_titles addObject:model];
        
        [self loadRequestData];
    }
    else
    {
        TonShiModel *model = arr_renyuan[indexPath.row];
        ZLTableViewCell *cell = [tableView cellForRowAtIndexPath:indexPath];
       
        
        if (cell.accessoryType==UITableViewCellAccessoryNone) {
            if (arr_slected_tongshi.count<5) {
                cell.accessoryType = UITableViewCellAccessoryCheckmark;
                [arr_slected_tongshi addObject:model];
                right.enabled=YES;
            }
            else
            {
                MBProgressHUD *hud=[MBProgressHUD showHUDAddedTo:self.view  animated:YES];
                hud.mode = MBProgressHUDModeText;
                hud.label.text =@"最多只能选择5个人";
                dispatch_time_t popTime = dispatch_time(DISPATCH_TIME_NOW, 1 * NSEC_PER_SEC);
                dispatch_after(popTime, dispatch_get_main_queue(), ^(void){
                    [MBProgressHUD hideHUDForView:self.view  animated:YES];
                });
            }
            
        }
        else
        {
            cell.accessoryType=UITableViewCellAccessoryNone;
            [arr_slected_tongshi removeObject:model];
            if (arr_slected_tongshi.count==0) {
                right.enabled=NO;
            }
            
        }
    }
    
    
}

@end
