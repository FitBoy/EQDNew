#import "YGZaiZhiViewController.h"
#import "ZLTableViewCell.h"
#import "YGShanXuanViewController.h"
@interface YGZaiZhiViewController ()<UITableViewDelegate,UITableViewDataSource,UISearchBarDelegate>
{
    UITableView *tableV;
    NSMutableArray *arr_zaizhi;
    NSMutableArray *tarr;
    YGShanXuanViewController *SXvc;
}

@end

@implementation YGZaiZhiViewController
-(void)viewWillAppear:(BOOL)animated{
    [super viewWillAppear:animated];
    [self loadRequestData];
}
-(void)loadRequestData{
    
}
- (void)viewDidLoad {
    [super viewDidLoad];
    self.navigationItem.title =@"在职人员";
    UIBarButtonItem *right =[[UIBarButtonItem alloc]initWithTitle:@"筛选" style:UIBarButtonItemStylePlain target:self action:@selector(shanxuanClick)];
    [self.navigationItem setRightBarButtonItem:right];
    
    tarr =[NSMutableArray arrayWithCapacity:0];
    arr_zaizhi =[NSMutableArray arrayWithCapacity:0];
    UISearchBar * searchBar =[[UISearchBar alloc]initWithFrame:CGRectMake(0, 64, DEVICE_WIDTH, 40)];
    [self.view addSubview:searchBar];
    searchBar.delegate=self;
    searchBar.placeholder=@"搜索";
    tableV = [[UITableView alloc]initWithFrame:CGRectMake(0, 104, DEVICE_WIDTH, DEVICE_HEIGHT-104) style:UITableViewStylePlain];
    tableV.delegate=self;
    tableV.dataSource=self;
    [self.view addSubview:tableV];
    tableV.rowHeight=55;
    tableV.mj_header = [MJRefreshNormalHeader headerWithRefreshingTarget:self refreshingAction:@selector(loadRequestData)];
    
    SXvc =[[YGShanXuanViewController alloc]init];
    [self addChildViewController:SXvc];
    SXvc.view.frame =CGRectMake(DEVICE_WIDTH*0.4, 64, DEVICE_WIDTH*0.6, DEVICE_HEIGHT);

}
-(void)shanxuanClick
{
    //筛选
    [self.view addSubview:SXvc.view];
    
}
#pragma  mark - 表的数据源
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return 2;
}
-(UITableViewCell*)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    static NSString *cellId=@"cellID";
    ZLTableViewCell *cell =[tableView dequeueReusableCellWithIdentifier:cellId];
    if (!cell) {
        cell = [[ZLTableViewCell alloc]initWithStyle:UITableViewCellStyleDefault reuseIdentifier:cellId];
        cell.accessoryType = UITableViewCellAccessoryDisclosureIndicator;
    }
    [cell.B_headimg setBackgroundImage:[UIImage imageNamed:@"qun"] forState:UIControlStateNormal];
    cell.L_name.text =@"姓名姓名姓名";
    cell.L_date.text =@"入职时间：2017-03-90";
    cell.L_bumen.text =@"部门";
    cell.L_gangwei.text =@"岗位";
    cell.backgroundColor =[UIColor blueColor];
    return cell;
}

#pragma  mark - 表的协议代理
