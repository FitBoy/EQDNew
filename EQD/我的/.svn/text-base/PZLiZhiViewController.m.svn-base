#import "PZLiZhiViewController.h"
#import "FBButton.h"
@interface PZLiZhiViewController ()<UITableViewDataSource,UITableViewDelegate>
{
    UITableView *tableV;
    NSMutableArray *arr_names;
    NSMutableArray *arr_contens;
}

@end

@implementation PZLiZhiViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    self.navigationItem.title =@"离职批准";
    arr_names =[NSMutableArray arrayWithArray:@[@"申请编码",@"申请人",@"工号",@"部门",@"岗位",@"入职时间",@"预计离职时间",@"离职类型",@"离职原因"]];
    tableV = [[UITableView alloc]initWithFrame:CGRectMake(0, 0, DEVICE_WIDTH, DEVICE_HEIGHT) style:UITableViewStylePlain];
    tableV.delegate=self;
    tableV.dataSource=self;
    [self.view addSubview:tableV];
    tableV.rowHeight=50;
   }

#pragma  mark - 表的数据源
-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return arr_names.count;
}
-(UITableViewCell*)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    static NSString *cellId=@"cellID";
    UITableViewCell *cell =[tableView dequeueReusableCellWithIdentifier:cellId];
    if (!cell) {
        cell = [[UITableViewCell alloc]initWithStyle:UITableViewCellStyleDefault reuseIdentifier:cellId];
        cell.accessoryType = UITableViewCellAccessoryNone;
    }
    cell.textLabel.text = arr_names[indexPath.row];
    return cell;
}
-(CGFloat)tableView:(UITableView *)tableView heightForFooterInSection:(NSInteger)section
{
    return 50;
}
-(UIView*)tableView:(UITableView *)tableView viewForFooterInSection:(NSInteger)section
{
    UIView *tview = [[UIView alloc]init];
    tview.userInteractionEnabled =YES;
    
    FBButton *tbn1 = [FBButton buttonWithType:UIButtonTypeSystem];
    [tbn1 setTitle:@"拒绝" titleColor:[UIColor whiteColor] backgroundColor:EQDCOLOR font:nil];
    tbn1.frame =CGRectMake(10, 5, DEVICE_WIDTH/2.0-15, 40);
    [tview addSubview:tbn1];
    [tbn1 addTarget:self action:@selector(jujueClick) forControlEvents:UIControlEventTouchUpInside];
    
    FBButton *tbtn2 =[FBButton buttonWithType:UIButtonTypeSystem];
    [tbtn2 setTitle:@"同意" titleColor:[UIColor whiteColor] backgroundColor:EQDCOLOR font:nil];
    [tbtn2 addTarget:self action:@selector(tongyiClick) forControlEvents:UIControlEventTouchUpInside];
    
    tbtn2.frame =CGRectMake(DEVICE_WIDTH/2.0+5, 5, DEVICE_WIDTH/2.0-15, 40);
    [tview addSubview:tbtn2];
    return tview;
}

-(void)jujueClick
{
    //拒绝
    UIAlertController *alert = [UIAlertController alertControllerWithTitle:nil message:@"请输入拒绝原因" preferredStyle:UIAlertControllerStyleAlert];
    [alert addTextFieldWithConfigurationHandler:^(UITextField * _Nonnull textField) {
        textField.placeholder = @"请输入拒绝离职原因";
    }];
    
    [alert addAction:[UIAlertAction actionWithTitle:@"取消" style:UIAlertActionStyleDefault handler:^(UIAlertAction * _Nonnull action) {
        
    }]];
    [alert addAction:[UIAlertAction actionWithTitle:@"确定" style:UIAlertActionStyleDefault handler:^(UIAlertAction * _Nonnull action) {
        
    }]];
    
    
    [self presentViewController:alert animated:NO completion:nil];
    
    
    
}
-(void)tongyiClick
{
    //同意
}
#pragma  mark - 表的协议代理
-(void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    
}



@end
